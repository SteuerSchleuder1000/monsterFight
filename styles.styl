

body
  font-family: Helvetica;



.main-wrapper

    .menu
        position absolute
        z-index 10
        margin 0.5rem
        .item
            background-color white
            padding 0.2rem 0.5rem
            margin 0.2rem
            border-radius: 0.2rem
            &:hover
                cursor pointer
                background-color green
                color white
                
    .fight-wrapper
        position absolute
        margin auto
        width 80vw
        height 80vh
        background-color black
        display: flex;
        justify-content: center;
        align-items: center;

        .monster-wrapper
            display inline-block
            background-color white
            border-radius: 0.3rem
            width 20rem
            margin 0.5rem
            .elements
                position absolute
                .element
                    width 2rem
                    height 2rem
                    margin 0.2rem
                    border-radius: 0.2rem
                    display inline-block
                    &.wind
                        background-color green
                    &.fire
                        background-color: red
                    &.water
                        background-color blue
                    &.metal
                        background-color: grey
                    &.earth
                        background-color brown
                    &.gold
                        background-color: gold
                    &.neutral
                        background-color: light(grey)
            .name
                font-size 150%
                font-weight bold
                padding 0.3rem
                text-align center
            
            .img
                height 25vh
                max-width 100%

            .bar
                height 20px
                width 19rem
                float left
                margin 0.2rem 
                padding 0.2rem
                padding-left 0.5rem
                color white
                border-radius 0.2rem
                &.hp
                    background-color #c10000
                &.mana
                    background-color #3a89ff
            .attacks
                margin 0.5rem
                display inline-block
                .attack
                    height 2rem
                    padding 0.2rem